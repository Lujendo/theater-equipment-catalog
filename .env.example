# Theater Equipment Catalog - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration - Option 1: Sevalla Database Add-on (Recommended)
# Use DATABASE_URL for Sevalla database add-ons (PostgreSQL or MySQL)
DATABASE_URL=postgres://username:password@host:port/database
# OR for MySQL: mysql://username:password@host:port/database

# Database Configuration - Option 2: Individual Variables
# Use these if not using DATABASE_URL
DB_DIALECT=postgres
DB_HOST=your-database-host
DB_USER=your-database-username
DB_PASSWORD=your-database-password
DB_NAME=theater_db
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=10000
NODE_ENV=production

# Frontend Configuration
FRONTEND_URL=https://your-app-name.sevalla.app

# File Upload Configuration
MAX_FILE_SIZE=52428800
MAX_FILES=5

# Optional: External Database URL (for services like PlanetScale)
# DATABASE_URL=mysql://username:password@host:port/database

# Optional: Redis URL (for session storage)
# REDIS_URL=redis://localhost:6379
