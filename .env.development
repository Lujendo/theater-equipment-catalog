# Local Development Environment Configuration
NODE_ENV=development
PORT=3001

# Local Database Configuration (SQLite for easy local development)
DB_TYPE=sqlite
DB_PATH=./local_theater.db

# Alternative: Local MySQL (if you prefer MySQL locally)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=theater_local
# DB_USER=root
# DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=local_development_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# Frontend URL for local development
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Development Features
ENABLE_DEBUG_LOGS=true
SKIP_AUTH_IN_DEV=false

# CORS Configuration for local development
CORS_ORIGIN=http://localhost:5173
